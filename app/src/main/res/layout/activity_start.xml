<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".StartActivity">

    <ImageView
        android:id="@+id/start_game_icon"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash_icon"/>


    <TextView
        android:id="@+id/start_game_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/start_game_icon"
        android:textStyle="italic"
        android:text="The Fat Fish"
        android:textSize="30dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/start_game_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/start_game_name"
        android:layout_marginTop="120dp"
        android:textStyle="italic"
        android:text="Developed by Adrian Iordache"
        android:textSize="18dp"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>